{
  "name": "@liam-hq/db-structure",
  "version": "0.0.12",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": "./dist/index.js",
    "./parser": "./dist/parser.js"
  },
  "dependencies": {
    "@prisma/internals": "6.2.1",
    "@ruby/prism": "1.2.0",
    "neverthrow": "8.1.1",
    "pg-query-emscripten": "5.1.0",
    "valibot": "^1.0.0-beta.5",
    "zod": "3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.3",
    "@liam-hq/configs": "workspace:*",
    "@pgsql/types": "15.0.2",
    "@prisma/generator-helper": "6.2.1",
    "json-refs": "3.0.15",
    "json-schema-to-zod": "2.6.0",
    "typescript": "5",
    "vitest": "2.1.4"
  },
  "scripts": {
    "build": "tsc && pnpm run cp:prism",
    "cp:prism": "cp node_modules/@ruby/prism/src/prism.wasm dist/parser/schemarb/",
    "fmt": "pnpm run '/^fmt:.*/'",
    "fmt:biome": "biome check --write --unsafe .",
    "lint": "pnpm run '/^lint:.*/'",
    "lint:biome": "biome check .",
    "lint:tsc": "tsc --noEmit",
    "postinstall": "pnpm run '/^postinstall:.*/'",
    "postinstall:cp-prism": "cp node_modules/@ruby/prism/src/prism.wasm src/parser/schemarb/prism.wasm",
    "postinstall:gen-tbls-schema": "node scripts/tblsJsonSchemaToZod.mjs",
    "test": "vitest --watch=false"
  },
  "types": "dist/index.d.ts"
}
